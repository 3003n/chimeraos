# Maintainer: Fijxu <fijxu (at) zzls (dot) xyz>

_gitname=Flatseal
pkgname=flatseal-git
pkgver=v2.0.2.r95.gba012a7
pkgrel=1
pkgdesc='A permissions manager for Flatpak.'
url="https://github.com/tchx84/Flatseal/"
arch=('x86_64')
license=('GPL3')
depends=('flatpak' 'gjs' 'webkitgtk-6.0' 'libhandy' 'appstream-glib' 'libadwaita')
makedepends=('git' 'flatpak-builder' 'ninja' 'base-devel')
source=("git+https://github.com/tchx84/Flatseal.git")
sha1sums=('SKIP')

pkgver() {
    cd $srcdir/$_gitname
    git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}


build() {
    cd $srcdir/$_gitname
    meson --prefix /usr --buildtype=plain . build
}

package() {
    cd $srcdir/$_gitname
    DESTDIR="$pkgdir" meson install -C build
}
