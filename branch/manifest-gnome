#! /bin/bash

for base in base-*; do
	source $base
done

export POSTCOPY="\
	gnome \
	wallpapers/gnome-backgrounds \
	wallpapers/gnome-backgrounds-cachyos \
"

export SUB_PACKAGES="\
	$BASE_PACKAGES \
	$BASE_GNOME_PACKAGES \
"

export SUB_AUR_PACKAGES="\
	$BASE_AUR_PACKAGES \
	$BASE_GNOME_AUR_PACKAGES \
"

export SUB_LOCAL_PACKAGES="\
	$BASE_LOCAL_PACKAGES \
	gnome-shell-extension-hibernate-status-git \
	gnome-shell-extension-logo-menu \
"

export SUB_PACKAGES_TO_DELETE="\
"

sub_postinstallhook() {
	install -Dm755 -t /etc/skel/Desktop/ /usr/share/applications/{skorionos-session-return,sk-chos-tool}.desktop
}
